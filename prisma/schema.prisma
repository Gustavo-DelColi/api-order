generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Order {
  orderId       Int     @id @default(autoincrement())
  value         Int
  creationDate  DateTime
  items         Items[]
}

model Items {
  id        Int   @id @default(autoincrement())
  productId String
  quantity  Int
  price     Int

  orderId Int
  order   Order @relation(fields: [orderId], references: [orderId], onDelete: Cascade)
}